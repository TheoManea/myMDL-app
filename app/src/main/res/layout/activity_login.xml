<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/connexion_page"
    tools:context="com.mymdl.george.myymdll.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57">

        <EditText
            android:id="@+id/mailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_login"
            android:drawableLeft="@drawable/ic_people_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="25dp"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_login"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"

            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:paddingLeft="25dp"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textColorHint="@android:color/black" />

        <CheckBox
            android:id="@+id/rememberMeCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:buttonTint="@color/white"
            android:text="rester connectÃ©"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/valid"
            android:layout_width="334dp"
            android:layout_height="75dp"
            android:background="@drawable/bg_rouded_btn_login"
            android:padding="15dp"
            android:text="Se connecter"
            android:textColor="@color/white" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>